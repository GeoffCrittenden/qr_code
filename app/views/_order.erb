        <option value="<%= @restaurant.items[18].id %>"><%= @restaurant.items[18].name.capitalize %></option>
        <option value="<%= @restaurant.items[19].id %>"><%= @restaurant.items[19].name.capitalize %></option>
        <option value="<%= @restaurant.items[20].id %>"><%= @restaurant.items[20].name.capitalize %></option>
        <option value="<%= @restaurant.items[21].id %>"><%= @restaurant.items[21].name.capitalize %></option>
      </select><br>
