<div class='top'>
  <h1>Make your order:</h1>
  <% if @restaurant.name == "Chipotle" %>
    <form class='order_form' id='chipotle_form' action='/generate' method='POST'>
      <input type='hidden' name='order[id]' value='<%= @order.id %>'/>
      <select class='pulldown' autofocus name='order[type]'>
        <option value='' selected disabled>choose:</option>
        <option value="<%= @restaurant.items[0].id %>"><%= @restaurant.items[0].name.capitalize %></option>
        <option value="<%= @restaurant.items[1].id %>"><%= @restaurant.items[1].name.capitalize %></option>
        <option value="<%= @restaurant.items[2].id %>"><%= @restaurant.items[2].name.capitalize %></option>
        <option value="<%= @restaurant.items[3].id %>"><%= @restaurant.items[3].name.capitalize %></option>
